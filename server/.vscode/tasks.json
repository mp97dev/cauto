{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/o",
                "-std=c++17",
                "-lcurl",
                "-lpqxx",
                "-lpistache",
                "-lssl",
                "-lcrypto",
                "-Wall",
                "-Wpedantic",
                "-Werror",
                "-Wno-deprecated-declarations"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
            ]
        }
    ],
    "version": "2.0.0"
}